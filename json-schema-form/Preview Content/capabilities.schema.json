{
  "$id": "https://example.com/capabilities.schema",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A configuration schema",

  "type": "object",
  "nullable": false,
  "properties": {
    "db": {
      "description": "The file to use.",
      "type": "string"
    },
    "tables": {
      "description": "List of tables ",
      "type": "array",
      "items": {
        "$ref": "#/otherSchemas/TableName"
      },
      "nullable": true
    },
    "include_sqlite_meta_tables": {
      "description": "By default index tables, etc are not included, set this to true to include them.",
      "type": "boolean",
      "nullable": true
    },
    "DEBUG": {
      "description": "For debugging.",
      "type": "object",
      "additionalProperties": true,
      "nullable": true
    }
  },
  "$defs": {
    "TableName": {
      "nullable": false,
      "type": "string"
    }
  }
}
